<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :dob, style: "display: block" %>
    <%= form.date_field :dob %>
  </div>

  <div>
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, Person::GENDERS %>
  </div>

  <div>
    <%= form.label :wife, style: "display: block" %>
    <%= form.select :wife_id,
      select_people_for_marriage(@person).collect {|p| [ p.full_name, p.id ] },
      include_blank: true,
      selected: person.wife&.id
    %>
  </div>

  <div>
    <%= form.label :husband, style: "display: block" %>
    <%= form.select :husband_id,
      select_people_for_marriage(@person).collect {|p| [ p.full_name, p.id ] },
      include_blank: true,
      selected: person.husband&.id
    %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date, value: person.marriage&.date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
